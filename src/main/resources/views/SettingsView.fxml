<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/16"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="fxzone.game.controller.SettingsUiController$SettingsUiControllerFxml"
  prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #383838;"
  fx:id="anchorPane"
  maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
>
  <children>
    <GridPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <Pane style="-fx-background-color: #303030;" GridPane.halignment="CENTER" GridPane.valignment="CENTER">

        </Pane>


        <Label alignment="BASELINE_CENTER" contentDisplay="RIGHT" text="Settings" textFill="WHITE"
          GridPane.halignment="CENTER" GridPane.valignment="CENTER">
          <font>
            <Font size="50.0"/>
          </font>
        </Label>

        <!-- START body -->

        <GridPane GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
          </columnConstraints>
          <rowConstraints>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="SOMETIMES"/>
          </rowConstraints>
          <children>
            <GridPane GridPane.rowIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0"
                  prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0"
                  prefWidth="150.0"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
              </rowConstraints>
              <!--
              <children>
                <Button fx:id="creditsButton" mnemonicParsing="false"
                  prefWidth="110.0" text="CREDITS" GridPane.columnIndex="0"
                  GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                  <font>
                    <Font size="20.0"/>
                  </font>
                </Button>
                <Button fx:id="quitButton" mnemonicParsing="false"
                  prefWidth="110.0" text="QUIT" GridPane.columnIndex="2"
                  GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                  <font>
                    <Font size="20.0"/>
                  </font>
                </Button>
              </children>
              -->
            </GridPane>
            <VBox alignment="CENTER" spacing="40.0">
              <children>
                <Button alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false"
                  prefWidth="400.0" text="SETTING 1">
                  <font>
                    <Font size="36.0"/>
                  </font>
                </Button>
                <Button alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false"
                  prefWidth="400.0" text="SETTING 2">
                  <font>
                    <Font size="36.0"/>
                  </font>
                </Button>
                <Button alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false"
                  prefWidth="400.0" text="BACK"
                  onAction="#back" >
                  <font>
                    <Font size="36.0"/>
                  </font>
                </Button>
              </children>
            </VBox>
          </children>
        </GridPane>

        <!-- END body -->
      </children>
    </GridPane>
  </children>

</AnchorPane>
